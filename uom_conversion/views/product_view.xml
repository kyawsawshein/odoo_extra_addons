<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="view_product_form_raw_product" model="ir.ui.view">
        <field name="name">product.template.inherit.form.raw.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <label for="raw_product_id"/>
                <div>
                    <field name="raw_product_id" class="oe_inline" style="vertical-align:baseline"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
