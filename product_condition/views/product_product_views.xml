<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.inherit.product_condition</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='feed_additional']" position="inside">
                <field name="product_grade" invisible="type == 'service'"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.list.inherit.product_condition</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="product_grade" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
