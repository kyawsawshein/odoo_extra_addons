<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_lot_expiration_rule_form" model="ir.ui.view">
        <field name="name">lot.expiration</field>
        <field name="model">lot.expiration</field>
        <field name="arch" type="xml">
            <form string="Lot Expiration Rules">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="picking_type_id"/>
                            <field name="location_src_id" options="{'no_create': True}" invisible="1"/>
                            <field name="location_dest_id" options="{'no_create': True}"/>
                            <field name="expired_date"/>
                        </group>
                        <group>
                            <div colspan="2">
                                <field name="validation_picking"/>
                            </div>
                        </group>
                    </group>
                    <group>
                        <group name="apply_on" string="Applicability">
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" placeholder="Visible to all"/>
                        </group>
                        <group string="Options">
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- <record id="lot_depreciation_rule_list" model="ir.ui.view">
        <field name="name">lot.expiration.list</field>
        <field name="model">lot.expiration</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
            </list>
        </field>
    </record> -->

    <record id="action_lost_expiration_rule" model="ir.actions.act_window">
        <field name="name">LOT Expiration</field>
        <field name="res_model">lot.expiration</field>
        <field name="view_mode">list,form</field>
        <!-- <field name="target">current</field> -->
    </record>

    <menuitem id="menu_lot_expiration_rule" name="LOT Expiration Rule" action="action_lost_expiration_rule" parent="stock.menu_warehouse_config" sequence="20"/>
</odoo>
