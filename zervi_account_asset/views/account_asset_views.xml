<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_asset_asset_form_inherit" model="ir.ui.view">
        <field name="name">account.asset.asset.form</field>
        <field name="model">account.asset.asset</field>
        <field name="inherit_id" ref="om_account_asset.view_account_asset_asset_form"/>
        <field name="arch" type="xml">
            <field name="code" position="after">
                <field name="product_id" readonly="state != 'draft'"/>
                <field name="lot_name" readonly="True"/>
                <field name="quantity" readonly="True"/>
            </field>

            <xpath expr="//field[@name='depreciation_line_ids']/list/field[@name='parent_state']" position="after">
                <field name="status" readonly="True"/>
            </xpath>

            <xpath expr="//field[@name='depreciation_line_ids']/form//group/field[@name='move_check']" position="after">
                <field name="status" readonly="True"/>
            </xpath>

            <field name="method_end" position="attributes">
                <attribute name="invisible">method_time == 'number'</attribute>
                <attribute name="required">method_time == 'end'</attribute>
            </field>

        </field>
    </record>

</odoo>
