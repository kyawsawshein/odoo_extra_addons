<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Purchase Create Bill Wizard Form View -->
        <record id="view_purchase_create_bill_wizard_form" model="ir.ui.view">
            <field name="name">purchase.create.bill.wizard.form</field>
            <field name="model">purchase.create.bill.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Vendor Bill">
                    <div class="alert alert-info" role="alert">
                        <strong>Mixed Purchase Methods Detected!</strong><br/>
                        Your purchase order contains items with different purchase methods.
                        Please choose how to proceed:
                    </div>
                    
                    <group>
                        <field name="purchase_order_id" invisible="1"/>
                        <field name="bill_option" widget="radio"/>
                    </group>

                    <group>
                        <group string="Items Ready to Bill" invisible="ready_lines == 'No items ready to bill'">
                            <field name="ready_lines" nolabel="1" readonly="1" widget="text"/>
                        </group>
                        
                        <group string="Items Waiting to be Received" invisible="waiting_lines == 'No items waiting'">
                            <field name="waiting_lines" nolabel="1" readonly="1" widget="text"/>
                        </group>
                    </group>
                    
                    <footer>
                        <button string="Create Bill" name="action_create_bill" type="object" 
                                class="btn-primary" 
                                invisible="bill_option == 'wait_all'"/>
                        <button string="Create Bill (Disabled - Wait for all items)" type="button" 
                                class="btn-secondary" 
                                invisible="bill_option != 'wait_all'"/>
                        <button string="Cancel" name="action_cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <!-- Wizard Action -->
        <record id="action_purchase_create_bill_wizard" model="ir.actions.act_window">
            <field name="name">Create Vendor Bill</field>
            <field name="res_model">purchase.create.bill.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</odoo>